{
  "name": "movies-lobby",
  "version": "1.0.0",
  "description": "Server application with APIs for a movie lobby for OTT applications. The lobby has a collection of movies with genre, rating, and streaming link",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "local": "ts-node src/index.ts",
    "nodemon": "nodemon --watch '*.ts'  --watch '*.json' --exec ts-node src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SheetalMor/movies-lobby.git"
  },
  "keywords": [
    "NodeJS",
    "Typescript",
    "ESLint",
    "Jest"
  ],
  "author": "SheetalMor",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SheetalMor/movies-lobby/issues"
  },
  "homepage": "https://github.com/SheetalMor/movies-lobby#readme",
  "dependencies": {
    "express": "^4.18.3",
    "mongoose": "^8.2.1",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2"
  }
}
